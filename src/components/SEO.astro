---
interface Props {
    title: string;
    description?: string;
    image?: string;
    article?: boolean;
}

const {
    title,
    description = "KHIPUx Ilo 2026 - AI meets Aymara Community. A leading AI conference in Latin America.",
    image = "/images/social-share.jpg", // Default image needs to exist or be created
    article = false,
} = Astro.props;

const siteUrl = Astro.site
    ? Astro.site.toString()
    : "https://khipux.aimaralab.com";
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const socialImageURL = new URL(image, siteUrl);
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={article ? "article" : "website"} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />

<!-- Sitemap -->
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Structured Data (JSON-LD) -->
<script type="application/ld+json" is:inline>
    {
        "@context": "https://schema.org",
        "@graph": [
            {
                "@type": "Organization",
                "name": "Khipu",
                "url": "https://khipu.ai",
                "logo": "https://khipux.aimaralab.com/khipu_logo.webp",
                "sameAs": [
                    "https://twitter.com/khipuai",
                    "https://linkedin.com/company/khipu",
                    "https://youtube.com/@khipu",
                    "https://instagram.com/khipuai"
                ]
            },
            {
                "@type": "Event",
                "name": "KHIPUx Ilo 2026",
                "startDate": "2026-08-18",
                "endDate": "2026-08-19",
                "eventStatus": "https://schema.org/EventScheduled",
                "eventAttendanceMode": "https://schema.org/MixedEventAttendanceMode",
                "location": {
                    "@type": "Place",
                    "name": "Universidad Nacional de Moquegua",
                    "address": {
                        "@type": "PostalAddress",
                        "streetAddress": "Ilo, Moquegua",
                        "addressLocality": "Ilo",
                        "addressRegion": "Moquegua",
                        "addressCountry": "PE"
                    }
                },
                "image": [
                    "https://khipux.aimaralab.com/khipu_logo.webp",
                    "https://khipux.aimaralab.com/chiribaya.webp"
                ],
                "description": "Fusionando la Inteligencia Artificial con la comunidad Aymara. Evento h√≠brido: presencial y virtual.",
                "organizer": {
                    "@type": "Organization",
                    "name": "Khipu",
                    "url": "https://khipu.ai"
                }
            }
        ]
    }
</script>
