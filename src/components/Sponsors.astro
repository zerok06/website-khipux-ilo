---
import sponsorsData from "../data/sponsors.json";

interface Props {
    locale?: string;
}

const { locale = "en" } = Astro.props;
const isEs = locale === "es";
---

<section id="sponsors" class="py-24 bg-primary-500">
    <div
        style="max-width: var(--content-max-width, 70%); margin: 0 auto; padding: 0 1rem;"
    >
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-white mb-4">Sponsors</h2>
        </div>

        {
            sponsorsData.diamond.length > 0 && (
                <div class="mb-16">
                    <h3 class="text-center text-sm font-semibold text-primary-100 uppercase tracking-widest mb-8">
                        Diamond Sponsors
                    </h3>
                    <div class="flex flex-wrap justify-center items-center gap-8">
                        {sponsorsData.diamond.map((sponsor) => (
                            <a
                                href="#"
                                class="block p-6 bg-white/10 border-2 border-dashed border-white/30 rounded-2xl hover:border-white/60 hover:bg-white/20 transition-all"
                            >
                                <img
                                    src={sponsor.logo}
                                    alt={sponsor.name}
                                    class="h-20 md:h-28 w-auto object-contain brightness-0 invert"
                                />
                            </a>
                        ))}
                    </div>
                </div>
            )
        }

        {
            sponsorsData.platinum.length > 0 && (
                <div class="mb-16">
                    <h3 class="text-center text-sm font-semibold text-primary-100 uppercase tracking-widest mb-8">
                        Platinum Sponsors
                    </h3>
                    <div class="flex flex-wrap justify-center items-center gap-6">
                        {sponsorsData.platinum.map((sponsor) => (
                            <a
                                href="#"
                                class="block p-4 bg-white/10 rounded-xl hover:bg-white/20 transition-all"
                            >
                                <img
                                    src={sponsor.logo}
                                    alt={sponsor.name}
                                    class="h-16 md:h-20 w-auto object-contain brightness-0 invert"
                                />
                            </a>
                        ))}
                    </div>
                </div>
            )
        }

        {
            sponsorsData.silver.length > 0 && (
                <div>
                    <h3 class="text-center text-sm font-semibold text-primary-100 uppercase tracking-widest mb-8">
                        Silver & Bronze Sponsors
                    </h3>
                    <div class="flex flex-wrap justify-center items-center gap-4">
                        {sponsorsData.silver.map((sponsor) => (
                            <a
                                href="#"
                                class="flex items-center justify-center px-8 py-4 border border-dashed border-white/40 rounded-lg text-white/60 hover:border-white hover:text-white transition-colors min-w-[120px]"
                            >
                                {sponsor.logo ? (
                                    <img
                                        src={sponsor.logo}
                                        alt={sponsor.name}
                                        class="h-8 w-auto object-contain brightness-0 invert"
                                    />
                                ) : (
                                    <span class="text-sm font-medium">
                                        {sponsor.name}
                                    </span>
                                )}
                            </a>
                        ))}
                    </div>
                </div>
            )
        }

        <div class="text-center mt-16 pt-12 border-t border-white/20">
            <p class="text-primary-100 mb-4">
                {
                    isEs
                        ? "¿Interesado en patrocinar KHIPUx Ilo 2026?"
                        : "Interested in sponsoring KHIPUx Ilo 2026?"
                }
            </p>
            <a
                href="#"
                class="inline-flex items-center gap-2 px-6 py-3 bg-white text-primary-600 rounded-full font-semibold hover:bg-primary-50 transition-all hover:scale-105"
            >
                {isEs ? "Conviértete en Sponsor" : "Become a Sponsor"}
            </a>
        </div>
    </div>
</section>
