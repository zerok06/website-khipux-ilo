---
import sponsorsData from "../data/sponsors.json";
import Wrapper from "./Wrapper.astro";

interface Props {
  locale: string;
}

const { locale } = Astro.props;
const isEs = locale === "es";
---

<section id="sponsors" class="py-32 bg-black relative">
  <Wrapper>
    <!-- Header with Rotated Image Separator -->
    <div class="text-center mb-20 px-4">
      <h2
        class="text-3xl md:text-4xl lg:text-5xl font-bold text-white leading-tight mb-8 uppercase tracking-[0.1em]"
      >
        Sponsors
      </h2>
      <div class="flex justify-center -mt-4">
        <div
          class="w-64 h-12 overflow-hidden flex items-center justify-center pointer-events-none"
        >
          <img
            src="/separador.webp"
            alt="Separator"
            class="w-48 h-auto rotate-90 opacity-60 brightness-110"
            style="filter: drop-shadow(0 0 15px rgba(216, 81, 32, 0.4));"
          />
        </div>
      </div>
    </div>

    {
      /* Support for multiple levels (strategic, platinum, gold, bronze) */
      Object.entries(sponsorsData).map(([category, sponsors]) => {
        if (!sponsors || sponsors.length === 0) return null;

        const config = {
          strategic: {
            label: isEs ? "Socio Estratégico" : "Strategic Partner",
            hex: "#5CE1E6",
          },
          platinum: {
            label: isEs ? "Sponsor Platino" : "Platinum Sponsor",
            hex: "#E0E0E0",
          },
          gold: {
            label: isEs ? "Sponsor Oro" : "Gold Sponsor",
            hex: "#FFBD59",
          },
          silver: {
            label: isEs ? "Sponsor Plata" : "Silver Sponsor",
            hex: "#B0B0B0",
          },
          bronze: {
            label: isEs ? "Sponsor Bronce" : "Bronze Sponsor",
            hex: "#B45F06",
          },
        }[category] || {
          label: category.charAt(0).toUpperCase() + category.slice(1),
          hex: "#6b7280",
        };

        return (
          <div class="mb-20 last:mb-0">
            {/* Centered Category Label with Subtle Lines */}
            <div class="flex items-center gap-6 mb-12 px-4 opacity-80">
              <div class="h-px w-full bg-white/10" />
              <span
                class="text-xs font-bold tracking-[0.3em] uppercase whitespace-nowrap"
                style={`color: ${config.hex}`}
              >
                {config.label}
              </span>
              <div class="h-px w-full bg-white/10" />
            </div>

            {/* Compact Centered Flex Grid */}
            <div class="flex flex-wrap justify-center gap-10 md:gap-16 max-w-6xl mx-auto">
              {sponsors.map((sponsor) => (
                <div class="group relative w-32 md:w-56 flex flex-col items-center">
                  <div class="relative flex items-center justify-center p-4 h-28 md:h-40 w-full transition-all duration-700">
                    {sponsor.logo ? (
                      <img
                        src={sponsor.logo}
                        alt={sponsor.name}
                        class={`w-auto object-contain relative z-10 transition-all duration-700 grayscale opacity-40 group-hover:grayscale-0 group-hover:opacity-100 group-hover:scale-110 ${
                          sponsor.name.includes(
                            "Universidad Nacional de Moquegua",
                          )
                            ? "max-h-24 md:max-h-32"
                            : "max-h-16 md:max-h-20"
                        }`}
                        loading="lazy"
                      />
                    ) : (
                      <span class="text-xs md:text-sm font-bold text-white/30 text-center relative z-10 tracking-wide uppercase transition-colors group-hover:text-white/70">
                        {sponsor.name}
                      </span>
                    )}
                  </div>

                  {/* Subtle Interaction Glow */}
                  <div class="text-center opacity-0 group-hover:opacity-40 transition-all duration-700 transform scale-75">
                    <div
                      class="w-2 h-2 rounded-full mx-auto"
                      style={`background-color: ${config.hex}; box-shadow: 0 0 15px ${config.hex}`}
                    />
                  </div>
                </div>
              ))}
            </div>
          </div>
        );
      })
    }

    {/* Become a Sponsor - Premium CTA */}
    <div class="text-center mt-32">
      <a
        href="#"
        class="inline-flex items-center gap-4 px-12 py-4 bg-primary-500 hover:bg-primary-600 text-white rounded-full font-bold shadow-2xl shadow-primary-500/20 transition-all hover:scale-105 uppercase tracking-widest text-sm"
      >
        {isEs ? "Conviértete en Sponsor" : "Become a Sponsor"}
        <svg
          class="w-5 h-5 transition-transform duration-500 group-hover:translate-x-1"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </Wrapper>
</section>
