---
import siteData from "../data/site.json";

interface Props {
    locale?: string;
}

const { locale = "en" } = Astro.props;
const isEs = locale === "es";
const currentYear = new Date().getFullYear();

const footerLinks = {
    es: { contact: "Contacto", events: "Eventos KHIPU", follow: "Síguenos" },
    en: { contact: "Contact", events: "KHIPU Events", follow: "Follow Us" },
};

const links = isEs ? footerLinks.es : footerLinks.en;
---

<footer class="bg-primary-500 border-t border-gray-800">
    <div
        style="max-width: var(--content-max-width, 70%); margin: 0 auto; padding: 3rem 1rem;"
    >
        <div class="flex md:gap-8 gap-4 md:flex-row flex-col">
            <div class="w-24">
                <img src="/khipu_knots.webp" class="" alt="KHIPUx Knots" />
            </div>
            <div class="grid md:grid-cols-4 gap-8">
                <div class="space-y-4">
                    <div class="flex items-center gap-2">
                        <div
                            class="w-8 h-8 bg-primary-500 rounded-lg flex items-center justify-center"
                        >
                            <span class="text-white font-bold text-sm">K</span>
                        </div>
                        <span class="text-xl font-bold text-white">KHIPUx</span>
                    </div>
                    <div class="space-y-2">
                        <h4
                            class="font-semibold text-white uppercase text-sm tracking-wider"
                        >
                            {links.contact}
                        </h4>
                        <p class="text-white-400 text-sm">info@khipu.ai</p>
                    </div>
                </div>

                <div class="space-y-4">
                    <h4
                        class="font-semibold text-white uppercase text-sm tracking-wider"
                    >
                        {links.events}
                    </h4>
                    <ul class="space-y-2 text-sm text-white-400">
                        <li>
                            <a
                                href="#"
                                class="hover:text-primary-400 transition-colors"
                                >KHIPUx Ilo 2026</a
                            >
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-primary-400 transition-colors"
                                >KHIPU 2025</a
                            >
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-primary-400 transition-colors"
                                >KHIPU 2024</a
                            >
                        </li>
                    </ul>
                </div>

                <div class="space-y-4">
                    <h4
                        class="font-semibold text-white uppercase text-sm tracking-wider"
                    >
                        About
                    </h4>
                    <ul class="space-y-2 text-sm text-white-400">
                        <li>
                            <a
                                href={`/${locale}#about`}
                                class="hover:text-primary-400 transition-colors"
                                >{isEs ? "Quiénes Somos" : "About Us"}</a
                            >
                        </li>
                        <li>
                            <a
                                href="https://www.aimaralab.com/"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="hover:text-primary-400 transition-colors"
                                >{isEs ? "AiMara Lab" : "AiMara Lab"}</a
                            >
                        </li>
                        <li>
                            <a
                                href={`/${locale}/policies`}
                                class="hover:text-primary-400 transition-colors"
                                >{
                                    isEs
                                        ? "Código de Conducta"
                                        : "Code of Conduct"
                                }</a
                            >
                        </li>
                    </ul>
                </div>

                <div class="space-y-4">
                    <h4
                        class="font-semibold text-white uppercase text-sm tracking-wider"
                    >
                        {links.follow}
                    </h4>
                    <div class="flex gap-3">
                        <a
                            href={siteData.socials.twitter}
                            class="w-10 h-10 bg-primary-400 rounded-full flex items-center justify-center text-white hover:bg-primary-600 hover:text-white transition-all"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                                ></path></svg
                            >
                        </a>
                        <a
                            href={siteData.socials.linkedin}
                            class="w-10 h-10 bg-primary-400 rounded-full flex items-center justify-center text-white hover:bg-primary-600 hover:text-white transition-all"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                                ></path></svg
                            >
                        </a>
                        <a
                            href={siteData.socials.youtube}
                            class="w-10 h-10 bg-primary-400 rounded-full flex items-center justify-center text-white hover:bg-primary-600 hover:text-white transition-all"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                                ></path></svg
                            >
                        </a>
                        <a
                            href={siteData.socials.instagram}
                            class="w-10 h-10 bg-primary-400 rounded-full flex items-center justify-center text-white hover:bg-primary-600 hover:text-white transition-all"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"
                                ></path></svg
                            >
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="chsumto text-white/70 mt-12"></div>
        <div class="pt-8">
            <div
                class="flex flex-col md:flex-row justify-between font-medium items-center gap-4 text-sm text-white/80"
            >
                <p>© {currentYear} {siteData.name}. All rights reserved.</p>
                <p class="flex items-center gap-2">
                    <span>{isEs ? "Hecho con" : "Made with"}</span>
                    <svg
                        class="w-4 h-4 text-red-500"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                            clip-rule="evenodd"></path>
                    </svg>
                    <span>{isEs ? "en Latinoamérica" : "in Latin America"}</span
                    >
                </p>
            </div>
        </div>
    </div>
</footer>
