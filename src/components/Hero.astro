---
import Wrapper from "./Wrapper.astro";
import heroData from "../data/hero.json";
import siteData from "../data/site.json";

interface Props {
  locale: string;
}

const { locale } = Astro.props;
const content = heroData[locale as keyof typeof heroData];
const isEs = locale === "es";

const backgroundSymbols = [
  "/images/patterns/symbol1.svg",
  "/images/patterns/symbol2.svg",
  "/images/patterns/symbol1.svg",
  "/images/patterns/symbol2.svg",
];
---

<section
  class="relative min-h-screen flex items-center bg-bg overflow-hidden pt-20 lg:pt-0"
>
  <!-- Símbolos culturales Removed -->

  <Wrapper class="relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">
      <!-- Left: Text Content -->
      <div class="space-y-6 animate-slide-in-left">
        <!-- Event Badge -->
        <div class="flex items-center gap-4">
          <div
            class="flex items-center gap-2 text-text-muted text-sm tracking-wider uppercase font-medium"
          >
            <span class="w-6 h-px bg-primary-500"></span>
            <span>{content.event_type}</span>
          </div>
        </div>

        <!-- Title - Slightly Reduced Size for better flow -->
        <div>
          <h1
            class="text-xl sm:text-2xl lg:text-[3.5rem] font-bold text-text leading-[1.05] tracking-tight font-heading"
          >
            KHIPU<span class="text-primary-500">x</span> Ilo
          </h1>
          <div class="w-24 h-1 bg-primary-500 mt-5 rounded-full"></div>
        </div>

        <!-- Subtitle -->
        <p class="text-base text-gray-300 max-w-lg leading-relaxed">
          {content.description}
        </p>

        <!-- Event Info -->
        <div class="flex flex-wrap gap-x-8 gap-y-3 text-base font-medium">
          <div class="flex items-center gap-2 text-white">
            <svg
              class="w-5 h-5 text-primary-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            <span>{isEs ? "18-19 Agosto, 2026" : "Aug 18-19, 2026"}</span>
          </div>
          <div class="flex items-center gap-2 text-white">
            <svg
              class="w-5 h-5 text-primary-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>Ilo, Perú</span>
          </div>
        </div>

        <!-- CTA -->
        <div class="flex flex-wrap gap-4 pt-1">
          <a
            href={isEs ? "/es/register" : "/en/register"}
            class="group inline-flex items-center gap-2 px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white rounded-full font-bold text-base transition-all duration-300 shadow-lg shadow-primary-500/25 hover:shadow-primary-500/40 hover:-translate-y-0.5"
          >
            <span>{content.cta_primary}</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-chevron-right-icon lucide-chevron-right w-5 h-5 transition-transform group-hover:translate-x-1"
              ><path d="m9 18 6-6-6-6"></path></svg
            >
          </a>
          <a
            href={isEs ? "/es/schedule" : "/en/schedule"}
            class="inline-flex items-center gap-2 px-6 py-3 border border-gray-700 text-gray-300 hover:text-white hover:border-gray-500 rounded-full font-medium text-base transition-all hover:bg-white/5"
          >
            {content.cta_secondary}
          </a>
        </div>

        <!-- Stats Row (Moved closer) -->
        <div class="pt-1 border-t border-gray-800/60 max-w-lg">
          <div class="grid grid-cols-3 gap-8">
            {
              content.stats.map(
                (stat: { value: string; label: string }, index: number) => (
                  <div
                    class="animate-fade-in-up"
                    style={`animation-delay: ${index * 0.1}s`}
                  >
                    <div class="text-2xl sm:text-3xl font-bold text-primary-500 font-heading">
                      {stat.value}
                    </div>
                    <div class="text-xs text-gray-300 uppercase tracking-widest mt-1 font-semibold">
                      {stat.label}
                    </div>
                  </div>
                ),
              )
            }
          </div>
        </div>
      </div>

      <!-- Right: Chiribaya Image -->
      <div
        class="relative hidden lg:flex items-center justify-center lg:justify-end"
      >
        <div class="relative w-full max-w-[500px]">
          <!-- Glow - Made softer -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div
              class="w-[120%] h-[120%] rounded-full bg-primary-500/10 blur-[100px] animate-pulse-slow"
            >
            </div>
          </div>

          <!-- Image with Breeze effect -->
          <div class="relative z-10">
            <img
              src="/chiribaya.webp"
              alt="Chiribaya Cultural Figure"
              class="w-full h-auto chiribaya-breeze"
            />
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>

<style>
  /* Soft Breeze & Lighting Animation */
  .chiribaya-breeze {
    animation:
      breeze-float 8s ease-in-out infinite,
      soft-light 5s ease-in-out infinite alternate;
    filter: drop-shadow(0 0 20px rgba(241, 91, 36, 0.1));
  }

  @keyframes breeze-float {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(1deg);
    }
  }

  @keyframes soft-light {
    0% {
      filter: drop-shadow(0 0 20px rgba(241, 91, 36, 0.15)) brightness(1);
    }
    100% {
      filter: drop-shadow(0 0 40px rgba(241, 91, 36, 0.3)) brightness(1.05);
    }
  }

  @keyframes pulse-slow {
    0%,
    100% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  .animate-pulse-slow {
    animation: pulse-slow 6s ease-in-out infinite;
  }
</style>
