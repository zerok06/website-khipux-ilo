---
import speakersData from "../data/speakers.json";

interface Props {
  locale: string;
}

const { locale } = Astro.props;
const isEs = locale === "es";
---

<section id="speakers" class="py-32 bg-bg relative">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-16">
      <div>
        <div class="inline-flex items-center gap-3 text-primary-500 font-medium mb-4">
          <div class="w-8 h-[2px] bg-primary-500"></div>
          <span class="uppercase tracking-widest text-sm">
            {isEs ? "Nuestros Expertos" : "Our Experts"}
          </span>
        </div>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text font-heading">
          Speakers
        </h2>
      </div>
      <a
        href={`/${locale}/speakers`}
        class="inline-flex items-center gap-2 px-6 py-3 border border-border text-text hover:border-primary-500 hover:text-primary-500 rounded-full font-medium transition-all"
      >
        {isEs ? "Ver todos" : "See all"}
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <!-- Speakers Grid - Larger Cards -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {speakersData.map((speaker) => (
        <div class="group relative bg-surface border border-border rounded-2xl overflow-hidden hover:border-primary-500/30 transition-all duration-300">
          <!-- Image -->
          <div class="aspect-4/5 overflow-hidden">
            <img
              src={speaker.image}
              alt={speaker.name}
              class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-105"
              loading="lazy"
            />
          </div>
          
          <!-- Info -->
          <div class="p-5">
            <h3 class="font-bold text-text text-lg mb-1 group-hover:text-primary-500 transition-colors">
              {speaker.name}
            </h3>
            <p class="text-text-muted text-sm mb-3">{speaker.role}</p>
            
            <!-- Type Badge -->
            <span class={`inline-block px-3 py-1 rounded-full text-xs font-medium uppercase tracking-wider ${
              speaker.type === 'keynote' ? 'bg-primary-500/10 text-primary-500' : 'bg-surface text-text-muted border border-border'
            }`}>
              {speaker.type === 'keynote' ? 'Keynote' : (isEs ? 'Organizador' : 'Organizer')}
            </span>
          </div>
        </div>
      ))}
    </div>

    <!-- More Coming Indicator -->
    <div class="mt-12 text-center">
      <div class="inline-flex items-center gap-3 text-text-subtle">
        <div class="w-2 h-2 bg-primary-500 rounded-full animate-pulse"></div>
        <span class="text-sm">
          {isEs ? "MÃ¡s speakers por anunciar" : "More speakers coming soon"}
        </span>
      </div>
    </div>
  </div>
</section>
