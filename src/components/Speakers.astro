---
import speakersData from "../data/speakers.json";

interface Props {
  locale: string;
}

const { locale } = Astro.props;
const isEs = locale === "es";
---

<section id="speakers" class="py-24 bg-black relative">
  <div
    style="max-width: var(--content-max-width, 70%); margin: 0 auto; padding: 0 1rem;"
  >
    <!-- Header -->
    <div class="text-center mb-16">
      <span
        class="inline-block px-4 py-1 bg-primary-500/20 text-primary-400 rounded-full text-sm font-medium mb-4"
      >
        {isEs ? "Conoce a los Expertos" : "Meet the Experts"}
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        {isEs ? "Nuestros " : "Our "}<span class="text-primary-500"
          >Speakers</span
        >
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        {
          isEs
            ? "Investigadores de clase mundial y líderes de la industria compartiendo conocimiento de vanguardia"
            : "World-class researchers and industry leaders sharing cutting-edge knowledge"
        }
      </p>
    </div>

    <!-- Speakers Grid -->
    <div class="relative">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {
          speakersData.map((speaker) => (
            <div class="group relative cursor-pointer">
              <div class="relative overflow-hidden rounded-2xl bg-gradient-to-b from-gray-800 to-gray-900 aspect-[3/4] shadow-lg transition-all duration-300 group-hover:shadow-2xl group-hover:-translate-y-2">
                <img
                  src={speaker.image}
                  alt={speaker.name}
                  class="w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity" />

                <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                  <h3 class="font-bold text-lg leading-tight group-hover:text-primary-300 transition-colors">
                    {speaker.name}
                  </h3>
                  <p class="text-sm text-gray-400 uppercase tracking-wide">
                    {speaker.role}
                  </p>
                </div>

                <div class="absolute inset-0 bg-primary-600/95 opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col justify-center items-center p-6 text-center">
                  <img
                    src={speaker.image}
                    alt={speaker.name}
                    class="w-20 h-20 rounded-full object-cover mb-4 ring-4 ring-white/30"
                  />
                  <h3 class="font-bold text-lg text-white mb-1">
                    {speaker.name}
                  </h3>
                  <p class="text-sm text-primary-100 uppercase tracking-wide mb-3">
                    {speaker.role}
                  </p>
                  <p class="text-sm text-white/80 line-clamp-3">
                    {speaker.bio ||
                      (isEs
                        ? "Experto en Inteligencia Artificial y Machine Learning"
                        : "Expert in Artificial Intelligence and Machine Learning")}
                  </p>
                  <button class="mt-4 px-4 py-2 bg-white text-primary-600 rounded-full text-sm font-medium hover:bg-primary-50 transition-colors">
                    {isEs ? "Ver Perfil" : "View Profile"}
                  </button>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="text-center mt-8">
      <p class="text-gray-500 text-sm">
        {
          isEs
            ? "Más speakers por anunciar..."
            : "More speakers to be announced..."
        }
      </p>
    </div>

    <div class="text-center mt-8">
      <a
        href={`/${locale}/speakers`}
        class="inline-flex items-center gap-2 px-8 py-4 bg-primary-500 hover:bg-primary-600 text-white rounded-full font-semibold shadow-lg shadow-primary-500/25 transition-all hover:shadow-xl hover:scale-105"
      >
        {isEs ? "Ver todos los speakers" : "See all speakers"}
        <svg
          class="w-5 h-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
