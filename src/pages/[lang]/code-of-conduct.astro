---
import Layout from "../../layouts/Layout.astro";
import cocData from "../../data/code_of_conduct.json";

export function getStaticPaths() {
    return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const isEs = lang === "es";
const content = isEs ? cocData.es : cocData.en;
---

<Layout title={`${content.title} - Khipux`} lang={lang}>
    <section class="min-h-screen bg-black pt-32 pb-24">
        <div class="max-w-4xl mx-auto px-6 lg:px-8">
            {/* Header */}
            <div class="mb-16 border-b border-white/10 pb-8">
                <span
                    class="text-primary-500 font-bold tracking-widest uppercase text-sm mb-4 block"
                >
                    {isEs ? "Pol√≠ticas" : "Policies"}
                </span>
                <h1
                    class="text-4xl md:text-5xl font-bold text-white font-heading tracking-tight mb-6"
                >
                    {content.title}
                </h1>
                <p class="text-xl text-gray-300 leading-relaxed max-w-3xl">
                    {content.intro}
                </p>
            </div>

            {/* Content - Prose Style */}
            <div
                class="prose prose-invert prose-lg max-w-none prose-headings:font-bold prose-headings:text-white prose-p:text-gray-300 prose-li:text-gray-300 prose-strong:text-white"
            >
                {
                    content.sections.map((section) => (
                        <div class="mb-12">
                            <h2 class="text-2xl md:text-3xl text-primary-500 mb-6 font-heading tracking-wide border-l-4 border-primary-500 pl-4">
                                {section.title}
                            </h2>
                            <div class="whitespace-pre-line leading-relaxed space-y-4">
                                {section.content}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
