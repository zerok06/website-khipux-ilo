---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import About from "../../components/About.astro";
import Speakers from "../../components/Speakers.astro";
import Sponsors from "../../components/Sponsors.astro";
import RegistrationCTA from "../../components/RegistrationCTA.astro";
import siteData from "../../data/site.json";

export function getStaticPaths() {
  return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
---

<Layout title={siteData.title} lang={lang}>
  <Hero locale={lang} />
  <About locale={lang} />
  <Speakers locale={lang} />
  <Sponsors locale={lang} />
  <RegistrationCTA locale={lang} />
</Layout>
