---
import Layout from "../../layouts/Layout.astro";
import MemberCard from "../../components/MemberCard.astro";
import speakersData from "../../data/speakers.json";

export function getStaticPaths() {
    return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const isEs = lang === "es";

const keynotes = speakersData.filter((s) => s.type === "keynote");
const speakers = speakersData.filter((s) => s.type === "speaker");
---

<Layout
    title={isEs ? "Speakers - Khipux" : "Speakers - Khipux"}
    lang={lang}
    description={isEs
        ? "Conoce a los expertos en IA y lenguas nativas que participarán en KHIPUx Ilo 2026."
        : "Meet the AI and native language experts participating in KHIPUx Ilo 2026."}
>
    <section class="pt-32 pb-24 bg-black min-h-screen">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <div class="text-center mb-20">
                <div
                    class="inline-flex items-center gap-3 text-primary-500 font-bold mb-4"
                >
                    <div class="w-12 h-[2px] bg-primary-500"></div>
                    <span class="uppercase tracking-widest text-sm">
                        {isEs ? "Nuestros Expertos" : "Our Experts"}
                    </span>
                    <div class="w-12 h-[2px] bg-primary-500"></div>
                </div>
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold text-white font-heading uppercase tracking-tight"
                >
                    Speakers
                </h1>
                <p
                    class="mt-6 text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed"
                >
                    {
                        isEs
                            ? "Conoce a los líderes mundiales y regionales que están transformando la IA y las lenguas nativas."
                            : "Meet the global and regional leaders who are transforming AI and native languages."
                    }
                </p>
            </div>

            <div class="space-y-32">
                {/* Keynotes Section */}
                <div class="relative">
                    <div class="flex items-center gap-6 mb-16">
                        <div
                            class="h-px flex-1 bg-gradient-to-r from-transparent via-primary-500/50 to-transparent"
                        >
                        </div>
                        <h2
                            class="text-2xl md:text-3xl font-bold text-white uppercase tracking-widest text-center px-4 border-l-4 border-primary-500 pl-6"
                        >
                            {isEs ? "Keynote Speakers" : "Keynote Speakers"}
                        </h2>
                        <div
                            class="h-px flex-1 bg-gradient-to-r from-transparent via-primary-500/50 to-transparent"
                        >
                        </div>
                    </div>

                    <div
                        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-16 justify-items-center"
                    >
                        {
                            keynotes.map((speaker) => (
                                <div class="scale-110 transform">
                                    <MemberCard member={speaker} />
                                </div>
                            ))
                        }
                    </div>
                </div>

                {/* Regular Speakers Section */}
                <div class="relative">
                    <div class="flex items-center gap-6 mb-16">
                        <div
                            class="h-px flex-1 bg-gradient-to-r from-transparent via-white/10 to-transparent"
                        >
                        </div>
                        <h2
                            class="text-xl md:text-2xl font-bold text-primary-400 uppercase tracking-widest text-center px-4"
                        >
                            {isEs ? "Speakers Invitados" : "Guest Speakers"}
                        </h2>
                        <div
                            class="h-px flex-1 bg-gradient-to-r from-transparent via-white/10 to-transparent"
                        >
                        </div>
                    </div>

                    <div
                        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-8 gap-y-16 justify-items-center"
                    >
                        {
                            speakers.map((speaker) => (
                                <MemberCard member={speaker} />
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
