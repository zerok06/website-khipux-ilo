---
import Layout from "../../layouts/Layout.astro";
import registrationData from "../../data/registration.json";

export function getStaticPaths() {
    return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const isEs = lang === "es";

const content = isEs ? registrationData.es : registrationData.en;
const steps = content.steps;
// Using a placeholder form URL for now, can be updated later
const FORM_URL =
    "https://docs.google.com/forms/d/e/1FAIpQLSe-PLACEHOLDER/viewform";
---

<Layout
    title={isEs ? "Registro - Khipux" : "Registration - Khipux"}
    lang={lang}
>
    <section class="pt-32 pb-24 bg-black min-h-screen">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <div
                class="text-center mb-24 transition-opacity duration-700 ease-out"
                id="header-section"
            >
                <div
                    class="inline-flex items-center gap-3 text-primary-500 font-bold mb-4"
                >
                    <div class="w-12 h-[2px] bg-primary-500"></div>
                    <span class="uppercase tracking-widest text-sm">
                        {content.subtitle}
                    </span>
                    <div class="w-12 h-[2px] bg-primary-500"></div>
                </div>
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold text-white font-heading uppercase tracking-tight"
                >
                    {content.title}
                </h1>
                <p
                    class="mt-6 text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed"
                >
                    {content.description}
                </p>
            </div>

            <div class="relative max-w-4xl mx-auto space-y-16">
                {/* Connection Vertical Line */}
                <div
                    class="hidden md:block absolute left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-transparent via-primary-500/30 to-transparent -translate-x-1/2 z-0"
                >
                </div>

                {
                    steps.map((step, index) => (
                        <div class="relative z-10 grid grid-cols-1 md:grid-cols-2 gap-8 items-center group">
                            {/* Number Circle (Desktop Center) */}
                            <div class="hidden md:flex absolute left-1/2 -translate-x-1/2 w-12 h-12 rounded-full bg-black border-2 border-primary-500/50 items-center justify-center font-bold text-primary-500 shadow-[0_0_20px_rgba(216,81,32,0.2)] group-hover:scale-110 group-hover:border-primary-500 group-hover:bg-primary-500 group-hover:text-black transition-all duration-500">
                                {step.number}
                            </div>

                            {/* Mobile Number */}
                            <div class="md:hidden flex items-center gap-4 mb-2">
                                <span class="text-4xl font-bold text-primary-500 font-heading opacity-50">
                                    {step.number}
                                </span>
                                <div class="h-px flex-1 bg-white/10" />
                            </div>

                            {/* Content: Alternating Sides */}
                            <div
                                class={`bg-white/5 border border-white/10 p-8 rounded-2xl hover:border-primary-500/30 transition-all duration-300 hover:bg-white/[0.07] ${index % 2 === 0 ? "md:order-1 md:text-right md:mr-12" : "md:order-2 md:ml-12"}`}
                            >
                                <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-primary-400 transition-colors">
                                    {step.title}
                                </h3>
                                <p class="text-gray-400 leading-relaxed">
                                    {step.description}
                                </p>
                            </div>

                            {/* Empty needed for grid balance */}
                            <div
                                class={`hidden md:block ${index % 2 === 0 ? "md:order-2" : "md:order-1"}`}
                            />
                        </div>
                    ))
                }
            </div>

            <div class="mt-24 text-center">
                <div
                    class="inline-block p-[2px] rounded-full bg-gradient-to-r from-primary-500 via-orange-400 to-primary-600 shadow-[0_0_50px_rgba(216,81,32,0.4)] hover:shadow-[0_0_80px_rgba(216,81,32,0.6)] transition-all duration-500 hover:scale-105"
                >
                    <a
                        href={FORM_URL}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="block px-12 py-6 bg-black rounded-full font-bold text-xl md:text-2xl text-white hover:bg-white hover:text-black transition-colors duration-300 items-center gap-3"
                    >
                        {content.cta}
                        <svg
                            class="inline-block w-6 h-6 ml-2"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                            ></path>
                        </svg>
                    </a>
                </div>
                <p class="mt-6 text-sm text-gray-500">
                    {content.note}
                </p>
            </div>
        </div>
    </section>
</Layout>
