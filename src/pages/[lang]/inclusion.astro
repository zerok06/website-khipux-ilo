---
import Layout from "../../layouts/Layout.astro";
import inclusionData from "../../data/inclusion.json";

export function getStaticPaths() {
    return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const isEs = lang === "es";
const content = isEs ? inclusionData.es : inclusionData.en;
---

<Layout title={`${content.title} - Khipux`} lang={lang}>
    <section class="min-h-screen bg-black pt-32 pb-24">
        <div class="max-w-4xl mx-auto px-6 lg:px-8">
            {/* Header */}
            <div class="mb-16 border-b border-white/10 pb-8">
                <span
                    class="text-primary-500 font-bold tracking-widest uppercase text-sm mb-4 block"
                >
                    {content.subtitle}
                </span>
                <h1
                    class="text-4xl md:text-5xl font-bold text-white font-heading tracking-tight mb-6"
                >
                    {content.title}
                </h1>
                <p class="text-xl text-gray-300 leading-relaxed max-w-3xl">
                    {content.description}
                </p>
            </div>

            {/* List Content - Prose Style */}
            <div
                class="prose prose-invert prose-lg max-w-none prose-headings:font-bold prose-headings:text-white prose-p:text-gray-300 prose-li:text-gray-300"
            >
                <ul class="list-none pl-0 space-y-12">
                    {
                        content.items.map((item) => (
                            <li class="relative pl-8 border-l-2 border-primary-500/50 hover:border-primary-500 transition-colors duration-300">
                                <h3 class="text-2xl text-white font-bold mb-3 font-heading tracking-wide flex items-center gap-3">
                                    {item.title}
                                </h3>
                                <p class="text-gray-400 leading-relaxed">
                                    {item.description}
                                </p>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>
    </section>
</Layout>
