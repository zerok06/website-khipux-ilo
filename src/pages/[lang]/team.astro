---
import Layout from "../../layouts/Layout.astro";
import siteData from "../../data/site.json";

export function getStaticPaths() {
    return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const isEs = lang === "es";
---

<Layout title={isEs ? "Equipo - Khipux" : "Team - Khipux"} lang={lang}>
    <section class="pt-32 pb-16 bg-white dark:bg-gray-900 min-h-screen">
        <div class="max-w-screen-xl mx-auto px-4 text-center">
            <h1
                class="text-4xl font-extrabold mb-8 text-gray-900 dark:text-white"
            >
                {isEs ? "Nuestro Equipo" : "Our Team"}
            </h1>
            <p
                class="mb-12 text-lg text-gray-500 dark:text-gray-400 max-w-2xl mx-auto"
            >
                {
                    isEs
                        ? "Khipux es organizado por un grupo dedicado de investigadores y estudiantes voluntarios."
                        : "Khipux is organized by a dedicated group of researchers and student volunteers."
                }
            </p>

            <!-- Placeholder Team Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
                {
                    [1, 2, 3, 4, 5, 6].map((i) => (
                        <div class="text-center">
                            <div class="w-32 h-32 mx-auto rounded-full bg-gray-200 dark:bg-gray-700 mb-4 flex items-center justify-center text-3xl">
                                ðŸ‘¾
                            </div>
                            <h3 class="text-lg font-bold text-gray-900 dark:text-white">
                                Member {i}
                            </h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400">
                                Organizer
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
