---
import Layout from "../../layouts/Layout.astro";
import cocData from "../../data/code_of_conduct.json";

export function getStaticPaths() {
    return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const isEs = lang === "es";
const coc = isEs ? cocData.es : cocData.en;

const inclusionItems = [
    {
        icon: "",
        title: isEs ? "Estudiantes" : "Students",
        desc: isEs
            ? "Todos los estudiantes a tiempo completo tienen acceso gratuito al evento."
            : "All full-time students have free access to the event.",
    },
    {
        icon: "",
        title: isEs ? "Traducci贸n" : "Translation",
        desc: isEs
            ? "Facilidades de traducci贸n simult谩nea (Espa帽ol-Aimara) en sesiones clave."
            : "Simultaneous translation facilities (Spanish-Aymara) in key sessions.",
    },
    {
        icon: "锔",
        title: isEs ? "Becas de Viaje" : "Travel Grants",
        desc: isEs
            ? "Apoyo econ贸mico para viaje y alojamiento a participantes clave."
            : "Financial support for travel and accommodation for key participants.",
    },
    {
        icon: "",
        title: isEs ? "Diversidad" : "Diversity",
        desc: isEs
            ? "Priorizamos la representaci贸n de mujeres y expertos ind铆genas."
            : "We prioritize representation of women and indigenous experts.",
    },
];
---

<Layout title={isEs ? "Pol铆ticas - Khipux" : "Policies - Khipux"} lang={lang}>
    <section class="pt-32 pb-24 bg-black min-h-screen">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
            {/* Header Section */}
            <div class="text-center mb-20 animate-fade-in-up">
                <div
                    class="inline-flex items-center gap-3 text-primary-500 font-bold mb-4"
                >
                    <div class="w-12 h-[2px] bg-primary-500"></div>
                    <span class="uppercase tracking-widest text-sm">
                        {isEs ? "Nuestros Valores" : "Our Values"}
                    </span>
                    <div class="w-12 h-[2px] bg-primary-500"></div>
                </div>
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold text-white font-heading uppercase tracking-tight"
                >
                    {isEs ? "Pol铆ticas e Inclusi贸n" : "Policies & Inclusivity"}
                </h1>
                <p
                    class="mt-6 text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed"
                >
                    {
                        isEs
                            ? "Nuestro compromiso es democratizar el acceso al conocimiento y fortalecer la comunidad."
                            : "Our commitment is to democratize access to knowledge and strengthen the community."
                    }
                </p>
            </div>

            <div class="space-y-32">
                {/* Inclusivity Section */}
                <div class="relative">
                    <div class="flex items-center gap-6 mb-16">
                        <div
                            class="h-px flex-1 bg-gradient-to-r from-transparent via-primary-500/50 to-transparent"
                        >
                        </div>
                        <h2
                            class="text-2xl md:text-3xl font-bold text-white uppercase tracking-widest text-center px-4 border-l-4 border-primary-500 pl-6"
                        >
                            {isEs ? "Plan de Inclusi贸n" : "Inclusion Plan"}
                        </h2>
                        <div
                            class="h-px flex-1 bg-gradient-to-r from-transparent via-primary-500/50 to-transparent"
                        >
                        </div>
                    </div>

                    <div
                        class="grid md:grid-cols-2 lg:grid-cols-2 gap-8 max-w-5xl mx-auto"
                    >
                        {
                            inclusionItems.map((item) => (
                                <div class="group relative bg-white/5 border border-white/10 p-8 rounded-2xl hover:border-primary-500/50 transition-all duration-300 hover:bg-white/[0.07] hover:-translate-y-1">
                                    <div class="absolute top-0 right-0 p-6 opacity-20 group-hover:opacity-100 transition-opacity text-4xl grayscale group-hover:grayscale-0">
                                        {item.icon}
                                    </div>
                                    <h3 class="text-xl font-bold text-white mb-4 group-hover:text-primary-400 transition-colors flex items-center gap-3">
                                        <span class="text-2xl">
                                            {item.icon}
                                        </span>
                                        {item.title}
                                    </h3>
                                    <p class="text-gray-400 leading-relaxed group-hover:text-gray-300 transition-colors">
                                        {item.desc}
                                    </p>
                                </div>
                            ))
                        }
                    </div>
                </div>

                {/* Code of Conduct Section */}
                <div class="relative" id="code-of-conduct">
                    <div class="flex items-center gap-6 mb-16">
                        <div
                            class="h-px flex-1 bg-gradient-to-r from-transparent via-white/10 to-transparent"
                        >
                        </div>
                        <h2
                            class="text-2xl md:text-3xl font-bold text-primary-400 uppercase tracking-widest text-center px-4"
                        >
                            {coc.title}
                        </h2>
                        <div
                            class="h-px flex-1 bg-gradient-to-r from-transparent via-white/10 to-transparent"
                        >
                        </div>
                    </div>

                    <div class="max-w-4xl mx-auto">
                        <div
                            class="bg-white/5 border border-white/10 rounded-3xl p-8 md:p-12 shadow-2xl backdrop-blur-sm relative overflow-hidden"
                        >
                            {/* Decorative Elements */}
                            <div
                                class="absolute top-0 right-0 w-64 h-64 bg-primary-500/10 rounded-full blur-[80px] pointer-events-none"
                            >
                            </div>

                            <p
                                class="text-lg md:text-xl text-white/90 leading-relaxed mb-12 font-medium text-center max-w-3xl mx-auto relative z-10"
                            >
                                "{coc.intro}"
                            </p>

                            <div class="space-y-8 relative z-10">
                                {
                                    coc.sections.map((section, index) => (
                                        <div class="group border-l-2 border-white/10 pl-6 hover:border-primary-500 transition-colors duration-300">
                                            <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary-400 transition-colors">
                                                {section.title}
                                            </h3>
                                            <div class="text-gray-400 leading-relaxed whitespace-pre-line text-sm md:text-base group-hover:text-gray-300 transition-colors">
                                                {section.content}
                                            </div>
                                        </div>
                                    ))
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
